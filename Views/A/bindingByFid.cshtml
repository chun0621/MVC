@model prjMvcDemo.Models.CCustomers
@{
    ViewBag.Title = "showByFid";
    string photo = "non.jpg";
    if (Model!= null)
    {
        photo = Model.fId + ".jpg";
    }
}

<h2>繫節物件範例</h2>

@{
    if (Model != null)
    {
        <h3>@Model.fName</h3>
        <p>
            <img src="~/Images/@photo" width="180" height="150" />
        </p>
        <p>
            @Model.fPhone
        </p>
    }
    else
    {
        <h3>沒有符合條件的資料</h3>
    }
}



