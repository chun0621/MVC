
@{
    ViewBag.Title = "Login";
}

<h2>登入系統</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>請輸入帳號與密碼</h4>
    <hr />
    <div class="form-group">
        <div class="col-md-offset-0 col-md-10">
            帳號(註冊時填寫的 Email)
        </div>
        <div class="col-md-10">
            @Html.TextBox("txtAccount", "chun@gmail.com", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-0 col-md-10">
            密碼
        </div>
        <div class="col-md-10">
            @Html.TextBox("txtPassword", "", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-0 col-md-10">
            <input type="submit" value="登入" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("註冊新使用者", "List")
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
